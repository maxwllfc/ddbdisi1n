CREATE TABLE faturas (
	num_fatura		INTEGER,
    cod_cliente		INTEGER,
    PRIMARY KEY (num_fatura)
);
CREATE TABLE produtos (
  	cod_produto		INTEGER,
  	descricao		VARCHAR,
  	PRIMARY KEY (cod_produto)
);
CREATE TABLE clientes (
  	cod_cliente		INTEGER,
  	nome_cliente	VARCHAR,
  	endereco		VARCHAR,
  	credito			INTEGER,
  	tipo			VARCHAR,
  	cpf				VARCHAR,
  	PRIMARY KEY (cod_cliente)
);
CREATE TABLE itens_fatura (
	num_fatura		INTEGER,
  	cod_produto		INTEGER,
  	quantidade		INTEGER,
  	valor			DECIMAL,
  	PRIMARY KEY (num_fatura)
  	FOREIGN KEY (cod_produto) REFERENCES produtos_cod_produto
);
