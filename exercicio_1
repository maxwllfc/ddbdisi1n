CREATE TABLE clientes (
    cod_cliente		INTEGER,
    nome_cliente	VARCHAR(100),
    endereco		VARCHAR(200),
    credito			INTEGER,
    tipo			VARCHAR(50),
    cpf				VARCHAR(15), 
    PRIMARY KEY (cod_cliente)
);

CREATE TABLE produtos (
    cod_produto		INTEGER,
    descricao		VARCHAR(255),
    PRIMARY KEY (cod_produto)
);

CREATE TABLE faturas (
	num_fatura		INTEGER,
    cod_cliente		INTEGER,
    PRIMARY KEY (num_fatura),
    FOREIGN KEY (cod_cliente) REFERENCES clientes(cod_cliente)
);

CREATE TABLE itens_fatura (
	num_fatura		INTEGER,
    cod_produto		INTEGER,
    quantidade		INTEGER,
    valor			DECIMAL,
    PRIMARY KEY (num_fatura, cod_produto),
    FOREIGN KEY (num_fatura) REFERENCES faturas(num_fatura),
    FOREIGN KEY (cod_produto) REFERENCES produtos(cod_produto)
);

ALTER TABLE clientes
	ADD historico VARCHAR (244)
	CHANGE nome_cliente VARCHAR (30)
    DROP credito;
    
ALTER TABLE faturas
	RENAME pedidos
    ADD data_ped INTEGER;
    
ALTER TABLE produtos
	ADD preco_compra INTEGER
    CHANGE descricao VARCHAR (25);
    
ALTER TABLE itens_fatura
	ADD preco_venda INTEGER
    CHANGE quantidade INT (5)
    DROP valor
    RENAME itens_pedido

drop TABLE itens_fatura
    
SELECT * FROM clientes;
SELECT * FROM faturas;
SELECT * FROM itens_fatura;
SELECT * FROM produtos;
